type User {
  id: ID! @id
  name: String!
  email: String! @unique
  movies: [Movie!]! @relation(name:"MoviesOfPost" onDelete: CASCADE)
  loginSecret: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Movie {
  id: ID! @id
  user: User! @relation(name: "MoviesOfPost")
  sentiment: String!
  rate: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}